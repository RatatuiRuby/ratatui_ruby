module RatatuiRuby
  class Gauge < Data
    attr_reader ratio: Float
    attr_reader label: String?
    attr_reader style: Style
    attr_reader block: Block?

    attr_reader use_unicode: bool
    def self.new: (?ratio: Float?, ?percent: Integer?, ?label: String?, ?style: Style, ?block: Block?, ?use_unicode: bool) -> Gauge
  end
end
